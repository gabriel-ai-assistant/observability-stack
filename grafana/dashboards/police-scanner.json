{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "title": "API Overview",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Request Rate",
      "description": "Total requests per second",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[5m]))",
          "legendFormat": "req/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" },
        "overrides": []
      }
    },
    {
      "title": "Error Rate (4xx + 5xx)",
      "description": "Error responses per second",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 1 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"4..|5..\"}[5m]))",
          "legendFormat": "errors/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.5 }, { "color": "red", "value": 5 }] }
        },
        "overrides": []
      }
    },
    {
      "title": "p50 Latency",
      "description": "Median request latency",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 1 },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      }
    },
    {
      "title": "p95 Latency",
      "description": "95th percentile request latency",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 1 },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 0.5 }, { "color": "red", "value": 2 }] }
        },
        "overrides": []
      }
    },
    {
      "title": "Application Health",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 7 },
      "collapsed": false,
      "panels": []
    },
    {
      "title": "Request Rate by Endpoint (Top 10)",
      "description": "Stacked request rate per handler",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 10, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "topk(10, sum(rate(http_requests_total[5m])) by (handler))",
          "legendFormat": "{{handler}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "stacking": { "mode": "normal" }, "fillOpacity": 30 } },
        "overrides": []
      }
    },
    {
      "title": "Error Rate by Endpoint",
      "description": "Errors per endpoint",
      "type": "table",
      "gridPos": { "h": 8, "w": 8, "x": 10, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{status=~\"4..|5..\"}[5m])) by (handler, method, status)",
          "legendFormat": "{{handler}}",
          "refId": "A",
          "format": "table",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "reqps" },
        "overrides": []
      }
    },
    {
      "title": "Active HTTP Connections",
      "description": "Current active connections",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 8 },
      "targets": [
        {
          "expr": "sum(http_requests_in_progress)",
          "legendFormat": "active",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "min": 0, "max": 100,
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 50 }, { "color": "red", "value": 80 }] }
        },
        "overrides": []
      }
    },
    {
      "title": "Infrastructure",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 16 },
      "collapsed": false,
      "panels": []
    },
    {
